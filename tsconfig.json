{
    "compilerOptions": {
        "baseUrl": "./src/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "ES2018",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "sourceMap": true,
        "lib": [
            "es5",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ]
}